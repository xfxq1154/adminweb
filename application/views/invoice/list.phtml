<script>
    Do.ready('base', function () {
        //表单综合处理
        $('#form').duxFormPage();
    });
    
    // 税率
    $(function(){
        $('#select').on('change', function(){
            
            var _that = $(this);
            var iVal = $(this).val();
            
            var aSelect = $(".fpsl");
            
            $.each(aSelect, function (i, ele) {
                           
                var aP = $(ele).find('option');
                
                aP.map( function () {
                    
                    if ($(this).val() == iVal) {
                        $(this).attr('selected', true);
                    }
                    
                });
            })
        });
    });
    
    $( function () {
       
       
       var oData = {};
       
       // 弹出
       $(".icon-pencil").on('click', function () {
          
            var oBox = $('#id_box');
            var _that = $(this);
            
            var oTr = $(this).parent('td').parent('tr');
            
            oData = {
                    
                order: oTr.find('td').eq(0).text(),
                type: oTr.find(':input[name="type"]').val(),
                sl: oTr.find('.fpsl').val(),
                address: oTr.find('input[name="xsf_dzdh"]').val()
            };
            
            if (oData.type == 1) {
                
                $(oBox).show('fast');
                
                // 禁止 href
                return false;
            } else {
                
                postData(oData);
                
            }
            
       });
       
       // 关闭
       $(".icon-close").on('click', function () {
           
           $('#id_box').hide();
       });
       
       $("#submit").on('click', function () {
           var v1 = $.trim($("input[name='v1']").val());
           var v2 = $.trim($("input[name='v2']").val());
           
           if (v1 && v2) {
               postData(oData);
           } else {
               alert('不能为空');
           }
           
       });
       
       
       function postData(data)
       {
           $.ajax({
               type: "POST",
               dataType: "JSON",
               url: '/soap/index',
               data: data
           }).done( function (data) {
               
               console.log(data);
               var msg = data.status == 2 ? 'success' : 'fail';
               alert(msg);
               window.location = '/invoice/showlist';
               
           }).fail( function (a) {
               console.log(a + ' fail ');
           });
       }
       
    });
</script>